# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Blockchain Configuration
POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology/
POLYGON_RPC=https://polygon-rpc.com/
PRIVATE_KEY=your_private_key_here

# Contract Addresses (will be populated after deployment)
ENTITY_REGISTRY_ADDRESS=
DOMAIN_REGISTRY_ADDRESS=
PHISHING_REPORTS_ADDRESS=

# External APIs
VIRUSTOTAL_API_KEY=your_virustotal_api_key
GOOGLE_SAFE_BROWSING_API_KEY=your_safe_browsing_api_key
SHODAN_API_KEY=your_shodan_api_key

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your_ipfs_api_key
IPFS_API_SECRET=your_ipfs_secret

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_KEYS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000,chrome-extension://*
